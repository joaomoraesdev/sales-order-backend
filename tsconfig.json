{
  "compilerOptions": {
    "target": "es2024",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@models/*": ["./@cds-models/*/index.ts"]
    }
  },
  "include": ["srv", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
